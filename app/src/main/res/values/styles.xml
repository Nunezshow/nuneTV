<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NuneTV" parent="Theme.Leanback">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.NuneTV.Splash" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.NuneTV.Player" parent="Theme.Leanback">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="TextAppearance.NuneTV.Heading" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
